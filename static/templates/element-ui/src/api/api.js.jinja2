const {{klass.name}}Url = '/api/{{klass.name | lower}}/{{klass.name | lower}}/'

export const search{{klass.name}} = (data) => {
  return new Promise(function(resolve, reject) {
    window.axios.get(`${{ '{' }}{{klass.name}}Url{{ '}' }}`, { params: data }).then((response) => {
      resolve(response)
    })
  })
}

