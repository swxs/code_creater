import Vue from 'vue'
import Router from 'vue-router'
import Index from './views/index.vue'
import Home from './views/home.vue'

Vue.use(Router)

export default new Router({
  routes: [
    {
      path: '/',
      name: 'index',
      component: Index,
      /* 在修改了默认模板后可以删除下方设置 */
      redirect: 'home',
      children: [
        {
          name: "home",
          path: "home",
          component: Home,
        },
      ]
    },
    {
      path: '*',
      name: 'NotFound',
      component: () => import('./views/404.vue'),
    },
  ],
})
